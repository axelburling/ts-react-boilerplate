{
  "name": "preact-typescript-webpack4-boilerplate",
  "version": "1.0.0",
  "description": "Preact training app",
  "scripts": {
    "build": "npm run clean && webpack --config ./webpack.config.js --mode production --progress",
    "postbuild": "react-snap",
    "dev": "npm run clean && webpack --config ./webpack.config.js --mode development",
    "start": "webpack-dev-server --config ./webpack.config.js --mode development",
    "clean": "rimraf ./dist",
    "storybook": "start-storybook -p 6006 -s ./dist",
    "build-storybook": "build-storybook -s ./dist"
  },
  "repository": {
    "type": "git",
    "repo": "https://github.com/axelburling/ts-react-boiler.git"
  },
  "keywords": [
    "react",
    "typescript",
    "less",
    "boilerplate",
    "webpack 4"
  ],
  "author": "Aki_Dev",
  "license": "ISC",
  "dependencies": {
    "@types/styled-components": "^5.1.4",
    "bootstrap": "^4.5.3",
    "next-images": "^1.6.2",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.0",
    "react-dom": "^17.0.1",
    "react-scripts-ts": "^3.1.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/react": "^6.0.28",
    "@types/bootstrap": "^5.0.0",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "babel-loader": "^8.2.1",
    "babel-preset-react-app": "^10.0.0",
    "copy-webpack-plugin": "5.0.4",
    "file-loader": "4.2.0",
    "fork-ts-checker-webpack-plugin": "1.5.1",
    "less": "3.10.3",
    "less-loader": "5.0.0",
    "less-plugin-clean-css": "1.5.1",
    "react-is": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-snap": "1.23.0",
    "require-context.macro": "^1.2.2",
    "rimraf": "3.0.0",
    "svg-react-loader": "^0.4.6",
    "svg-url-loader": "^6.0.0",
    "ts-loader": "6.2.0",
    "tslint": "^6.1.3",
    "typescript": "3.6.4",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.9",
    "webpack-dev-server": "3.7.1"
  },
  "reactSnap": {
    "source": "dist"
  },
  "optionalDependencies": {
    "@advinans/tslint-config": "^8.0.0"
  }
}
